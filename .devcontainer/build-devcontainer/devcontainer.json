{
    "name": "nfcore-devcontainer-build",

    // installs python3.11, nf-core tools from current workspace
    // based on mcr.microsoft.com/devcontainers/base:ubuntu-22.04
    "build": {
        "dockerfile": "./Dockerfile",
        "context": "../.."
    },

    "features": {
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/java:1": {
            "version": "21.0.6-ms"
        },
        "ghcr.io/rocker-org/devcontainer-features/miniforge:2": {
            "version": "latest"
        },
        "./local-features/apptainer": {},
        "./local-features/nextflow": {}
    },

    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace/tools,type=bind",
    "workspaceFolder": "$/workspace/tools",

    "remoteUser": "root",
    "privileged": true,

    // Configure tool-specific properties.
    "customizations": {
        // Configure properties specific to VS Code.
        "vscode": {
            // Set *default* container specific settings.json values on container create.
            "settings": {
                "python.defaultInterpreterPath": "/opt/conda/bin/python"
            },

            // Add the IDs of extensions you want installed when the container is created.
            "extensions": ["ms-python.python", "ms-python.vscode-pylance", "nf-core.nf-core-extensionpack"]
        }
    }
}
